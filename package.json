{
  "name": "apps",
  "version": "0.0.0",
  "private": true,
  "description": "AHS 502 - Apps",
  "author": "Hessamoddin A Shokravi <ahs502@gmail.com>",
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node ./src/server.ts",
    "start:dev": "cross-env PORT=4000 RELATIVE_STORAGE_PATH=data-dev npm start",
    "install:all": "npm install && npm install --prefix apps/website && npm install --prefix apps/todo-list",
    "develop": "nodemon --watch src --ext ts,js,json --verbose --exec \"npm run start:dev\"",
    "develop:website": "concurrently -k -p \"[{index}] [{time}] [{name}]\" -n \"Server,Client\" -c \"blue,green\" \"npm run develop\" \"npm start --prefix apps/website\"",
    "develop:todo-list": "concurrently -k -p \"[{index}] [{time}] [{name}]\" -n \"Server,Client\" -c \"blue,green\" \"npm run develop\" \"npm start --prefix apps/todo-list\"",
    "updates:check": "ncu",
    "updates:install": "ncu -u && npm install",
    "build": "npm run build:clean && npm run build:website && npm run build:todo-list",
    "build:clean": "del-cli \"static/*\"",
    "build:website": "npm run --prefix apps/website build && cp -a apps/website/build/* static && rm -rf apps/website/build",
    "build:todo-list": "npm run --prefix apps/todo-list build && mkdir static/todo-list && cp -a apps/todo-list/build/* static/todo-list && rm -rf apps/todo-list/build",
    "ts-node": "ts-node"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "cookie-parser": "~1.4.4",
    "crypto-random-string": "^3.1.0",
    "del-cli": "^3.0.0",
    "express": "~4.17.1",
    "http-errors": "~1.7.3",
    "key-file-storage": "^2.2.8"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.3",
    "@types/http-errors": "^1.6.3",
    "@types/node": "^13.7.7",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.2",
    "npm-check-updates": "^4.0.3",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  }
}
