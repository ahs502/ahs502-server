{
  "name": "apps",
  "version": "0.0.0",
  "description": "AHS 502 - Apps",
  "author": "Hessamoddin A Shokravi <ahs502@gmail.com>",
  "private": true,
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node ./src/server.ts",
    "install:all": "npm install && npm install --prefix apps/website",
    "develop:server": "nodemon --watch src --ext ts,js,json --verbose --exec \"npm start\"",
    "develop:website": "concurrently -k -p \"[{index}] [{time}] [{name}]\" -n \"Server,Client\" -c \"blue,green\" \"npm run develop:server\" \"npm start --prefix apps/website\"",
    "updates:check": "ncu",
    "updates:install": "ncu -u && npm install",
    "build": "npm run build:website",
    "build:website": "npm run --prefix apps/website build",
    "ts-node": "ts-node"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "cookie-parser": "~1.4.4",
    "crypto-random-string": "^3.1.0",
    "express": "~4.17.1",
    "http-errors": "~1.7.3",
    "key-file-storage": "^2.2.8"
  },
  "devDependencies": {
    "@types/colors": "^1.2.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.3",
    "@types/http-errors": "^1.6.3",
    "@types/node": "^13.7.7",
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2",
    "npm-check-updates": "^4.0.3",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  }
}
